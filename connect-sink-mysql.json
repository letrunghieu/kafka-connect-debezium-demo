{
  "name": "mysql-sink",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "connection.url": "jdbc:mysql://mysql:3306/acme_target",
    "connection.username": "connect",
    "connection.password": "password",
    "insert.mode": "upsert",
    "delete.enabled": "true",
    "primary.key.mode": "record_key",
    "schema.evolution": "none",
    "use.time.zone": "UTC",
    "topics.regex": "^(mysql\\.json\\.acme)\\.([^.]+)$",
    "collection.name.format": "{source.table}"
    }
}